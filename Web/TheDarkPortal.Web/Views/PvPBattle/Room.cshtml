                    </div>
                </a>
                <div class="card-body">
                    <h5 class="card-title">@card.Name</h5>
                    <div class="">
                        <div class="row justify-content-around">
                            <p><i class="fas fa-angle-double-right"></i>@card.Power</p>
                            <p><i class="fas fa-shield-alt"></i>@card.Defense</p>
                            <p><i class="fas fa-heartbeat"></i>@card.Health</p>
                        </div>
                        <div class="row justify-content-around">
                            <p>Tire @card.Tire</p>
                            <p>Level @card.Level</p>
                        </div>
                    </div>

                    <a class="btn btn-primary btn-sm" asp-controller="PvPBattle" asp-action="Select" asp-route-id="@card.Id">Select</a>

                </div>
            </div>
        }

    </div>

</div>
