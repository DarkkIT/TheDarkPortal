@model TheDarkPortal.Web.ViewModels.PagingViewModel;

<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviosPage) { <text>disabled</text> } ">
            <a class="page-link" asp-action="index" asp-route-id="@Model.PreviosPageNumber">Previous</a>
        </li>

        @if (Model.PageNumber > 1)
        {
            <li class="page-item"><a class="page-link" asp-action="index" asp-route-id="@Model.PreviosPageNumber">@Model.PreviosPageNumber</a></li>
        }

        <li class="page-item active">
            <a class="page-link" href="#">@Model.PageNumber<span class="sr-only">(current)</span></a>
        </li>

        @if (Model.PageNumber < Model.PagesCount)
        {
            <li class="page-item"><a class="page-link" asp-action="index" asp-route-id="@Model.NextPageNumber">@Model.NextPageNumber</a></li>
        }

        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="index" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>
